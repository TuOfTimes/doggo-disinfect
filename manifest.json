{
    "manifest_version": 2,
    "name": "Doggo Disinfect",
    "description": "Disinfect webpages by replacing suggestive images with photos of dogs",
    "version": "1.0.0",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "activeTab"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "icon_128.png",
        "default_title": "Doggo Disinfect"
    }
}